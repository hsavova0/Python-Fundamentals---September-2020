# Title: Bread Factory
# Input
event = input().split("|")
# Given numbers
initial_energy = 100
initial_coins = 100

# Define the variables
current_energy = 100
coins = 100
flag = True

# Logic
for element in event:
    item, number = element.split("-")
    number = int(number)
    if item == "rest":
        if current_energy + number >= initial_energy:
            print("You gained 0 energy.")
            print("Current energy: 100.")
        else:
            current_energy += number
            print(f"You gained {number} energy.")
            print(f"Current energy: {current_energy}.")
    elif item == "order":
        if current_energy - 30 >= 0:
            current_energy -= 30
            coins += number
            print(f"You earned {number} coins.")
        else:
            current_energy += 50
            print("You had to rest!")
            # when you use the continue statement, you go to the next element in the list
            continue
    else:
        if coins > number:
            coins -= number
            print(f"You bought {item}.")
        else:
            # if the boolean is flagged as False, the code outside the for loop wont be executed.
            flag = False
            print(f"Closed! Cannot afford {item}.")
            # when you use the break statement, you break the for loop
            break

if flag:
    print("Day completed!")
    print(f"Coins: {coins}")
    print(f"Energy: {current_energy}")
