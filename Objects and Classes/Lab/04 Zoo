class Zoo:
    __animals = 0

    def __init__(self, name):
        self.name = name
        self.mammal = []
        self.fish = []
        self.bird = []

    def add_animal(self, species, name):
        if species == "mammal":
            self.mammal.append(species)
        elif species == "fish":
            self.fish.append(species)
        elif species == "bird":
            self.bird.append(species)
        self.__animals += 1

    def get_info(self, species):
        zoo_name = self.name
        if species == "mammal":
            species_name = self.mammal
        elif species == "fish":
            species_name = self.fishe
        elif species == "birds":
            species_name = self.bird
        names = ", ".join(species_name)
        return f"{species} in {zoo_name}: {names}"

    def get_total(self):
        return f"Total animals: {self.__animals}"


zoo_name = input()
zoo = Zoo(zoo_name)

n = int(input())

for _ in range(n):
    species, name = input().split(" ")
    zoo.add_animal(species, name)

species = input()

print(zoo.get_info(species))
print(zoo.get_total())
